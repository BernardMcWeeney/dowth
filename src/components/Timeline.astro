---
// src/components/Timeline.astro
---

<div class="w-full px-4 md:px-8 py-6 bg-gradient-to-b from-transparent to-black/50 backdrop-blur-sm z-10 mt-auto">
  <div class="container max-w-5xl mx-auto">
    <!-- Date and countdown display for desktop -->
    <div class="hidden md:flex justify-between items-center mb-4 text-white">
      <div>
        <span id="current-date" class="text-white/80 text-sm"></span>
      </div>
      <div>
        <span id="desktop-countdown" class="text-amber-200 text-sm font-medium"></span>
      </div>
    </div>
    <!-- Desktop Timeline -->
    <div class="hidden md:block">
      <!-- Timeline bar with gradient -->
      <div class="h-4 rounded-full relative bg-gradient-to-r from-indigo-800 via-amber-500 to-indigo-800 overflow-hidden">
        <!-- Current position marker -->
        <div id="date-marker" class="absolute top-1/2 w-4 h-8 rounded-full bg-white -translate-y-1/2 shadow-lg z-10 transition-all duration-500 -translate-x-1/2"></div>
        
        <!-- Season markers with tooltips -->
        <div id="winter-marker" class="group absolute top-0 h-full w-1 bg-white/50 -translate-x-1/2 cursor-pointer">
          <div class="hidden group-hover:block absolute bottom-full left-1/2 -translate-x-1/2 w-48 bg-black/80 p-2 rounded text-xs text-white mb-1 z-30">
            <p class="font-bold">Winter Solstice</p>
            <p>Grianstad an Gheimhridh</p>
            <p class="text-amber-200 mt-1">Celtic Festival: Samhain (around 1st Nov)</p>
          </div>
        </div>
        <div id="spring-marker" class="group absolute top-0 h-full w-1 bg-white/50 -translate-x-1/2 cursor-pointer">
          <div class="hidden group-hover:block absolute bottom-full left-1/2 -translate-x-1/2 w-48 bg-black/80 p-2 rounded text-xs text-white mb-1 z-30">
            <p class="font-bold">Spring Equinox</p>
            <p>Cónocht an Earraigh</p>
            <p class="text-amber-200 mt-1">Celtic Festival: Imbolc (around 1st Feb)</p>
          </div>
        </div>
        <div id="summer-marker" class="group absolute top-0 h-full w-1 bg-white/50 -translate-x-1/2 cursor-pointer">
          <div class="hidden group-hover:block absolute bottom-full left-1/2 -translate-x-1/2 w-48 bg-black/80 p-2 rounded text-xs text-white mb-1 z-30">
            <p class="font-bold">Summer Solstice</p>
            <p>Grianstad an tSamhraidh</p>
            <p class="text-amber-200 mt-1">Celtic Festival: Bealtaine (around 1st May)</p>
          </div>
        </div>
        <div id="autumn-marker" class="group absolute top-0 h-full w-1 bg-white/50 -translate-x-1/2 cursor-pointer">
          <div class="hidden group-hover:block absolute bottom-full left-1/2 -translate-x-1/2 w-48 bg-black/80 p-2 rounded text-xs text-white mb-1 z-30">
            <p class="font-bold">Autumn Equinox</p>
            <p>Cónocht an Fhómhair</p>
            <p class="text-amber-200 mt-1">Celtic Festival: Lughnasa (around 1st Aug)</p>
          </div>
        </div>
      </div>
      
      <!-- Season details -->
      <div class="mt-4 relative">
        <div class="grid grid-cols-4 gap-6 pt-2">
          <div class="text-center rounded p-2 transition-all duration-300" id="winter">
            <h4 class="uppercase text-sm tracking-widest mb-1">Winter Solstice</h4>
            <p class="text-amber-200 text-xs font-light mb-1">Grianstad an Gheimhridh</p>
            <time class="text-white/70 text-xs block" id="winter-date"></time>
            <p class="text-white/60 text-xs mt-1 italic">Samhain</p>
          </div>
          
          <div class="text-center rounded p-2 transition-all duration-300" id="spring">
            <h4 class="uppercase text-sm tracking-widest mb-1">Spring Equinox</h4>
            <p class="text-amber-200 text-xs font-light mb-1">Cónocht an Earraigh</p>
            <time class="text-white/70 text-xs block" id="spring-date"></time>
            <p class="text-white/60 text-xs mt-1 italic">Imbolc</p>
          </div>
          
          <div class="text-center rounded p-2 transition-all duration-300" id="summer">
            <h4 class="uppercase text-sm tracking-widest mb-1">Summer Solstice</h4>
            <p class="text-amber-200 text-xs font-light mb-1">Grianstad an tSamhraidh</p>
            <time class="text-white/70 text-xs block" id="summer-date"></time>
            <p class="text-white/60 text-xs mt-1 italic">Bealtaine</p>
          </div>
          
          <div class="text-center rounded p-2 transition-all duration-300" id="autumn">
            <h4 class="uppercase text-sm tracking-widest mb-1">Autumn Equinox</h4>
            <p class="text-amber-200 text-xs font-light mb-1">Cónocht an Fhómhair</p>
            <time class="text-white/70 text-xs block" id="autumn-date"></time>
            <p class="text-white/60 text-xs mt-1 italic">Lughnasa</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Mobile Timeline -->
    <div class="md:hidden">
      <!-- Current season display -->
      <div class="text-center mb-4">
        <h3 id="mobile-season" class="text-amber-200 text-lg tracking-widest mb-1"></h3>
        <p id="mobile-irish" class="text-amber-100/80 text-xs italic mb-2"></p>
        <div class="flex justify-center items-center gap-2 text-white/80 text-xs">
          <time id="mobile-date"></time>
          <span id="mobile-countdown"></span>
        </div>
      </div>
      
      <!-- Simple mobile timeline -->
      <div class="h-3 rounded-full relative bg-gradient-to-r from-indigo-800 via-amber-500 to-indigo-800 overflow-hidden mb-2">
        <div id="date-marker-mobile" class="absolute top-1/2 w-3 h-6 rounded-full bg-white -translate-y-1/2 shadow-lg z-10 transition-all duration-500 -translate-x-1/2"></div>
        
        <!-- Season markers with tap/touch info -->
        <div id="winter-marker-mobile" class="absolute top-0 h-full w-3 bg-white/50 -translate-x-1/2 cursor-pointer rounded-full"></div>
        <div id="spring-marker-mobile" class="absolute top-0 h-full w-3 bg-white/50 -translate-x-1/2 cursor-pointer rounded-full"></div>
        <div id="summer-marker-mobile" class="absolute top-0 h-full w-3 bg-white/50 -translate-x-1/2 cursor-pointer rounded-full"></div>
        <div id="autumn-marker-mobile" class="absolute top-0 h-full w-3 bg-white/50 -translate-x-1/2 cursor-pointer rounded-full"></div>
      </div>
      
      <!-- Season labels -->
      <div class="flex justify-between text-xs text-white/60 px-1">
        <span>Winter</span>
        <span>Spring</span>
        <span>Summer</span>
        <span>Autumn</span>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      // Get current date
      const currentDate = new Date();
      const currentYear = currentDate.getFullYear();
      
      // Fetch season data
      const seasons = await fetchSeasonData(currentYear);
      
      if (seasons) {
        updateTimeline(seasons, currentDate);
      }
    } catch (error) {
      console.error('Error:', error);
      // Don't use fallback, just show error
      console.error('Unable to load season data');
    }
  });
  
  async function fetchSeasonData(year) {
    try {
      const response = await fetch(`https://aa.usno.navy.mil/api/seasons?year=${year}`);
      
      if (!response.ok) {
        throw new Error('Failed to fetch season data');
      }
      
      const data = await response.json();
      
      // Map the data to our simplified format
      return data.data
        .filter(entry => entry.phenom === 'Equinox' || entry.phenom === 'Solstice')
        .map(season => {
          const date = new Date(
            season.year, 
            season.month - 1, 
            season.day, 
            parseInt(season.time.split(':')[0]), 
            parseInt(season.time.split(':')[1])
          );
          
          let type = '';
          let irishName = '';
          
          if (season.phenom === 'Solstice' && season.month === 12) {
            type = 'Winter';
            irishName = 'Grianstad an Gheimhridh';
          } else if (season.phenom === 'Equinox' && season.month === 3) {
            type = 'Spring';
            irishName = 'Cónocht an Earraigh';
          } else if (season.phenom === 'Solstice' && season.month === 6) {
            type = 'Summer';
            irishName = 'Grianstad an tSamhraidh';
          } else if (season.phenom === 'Equinox' && season.month === 9) {
            type = 'Autumn';
            irishName = 'Cónocht an Fhómhair';
          }
          
          return { type, irishName, date };
        })
        .sort((a, b) => a.date - b.date);
    } catch (error) {
      console.error('Error fetching season data:', error);
      throw error; // Let the calling function handle the error
    }
  }
  
  function updateTimeline(seasons, currentDate) {
    const currentYear = currentDate.getFullYear();
    const yearStart = new Date(currentYear, 0, 1);
    const yearEnd = new Date(currentYear, 11, 31, 23, 59, 59);
    
    // Calculate current progress through the year (as percentage)
    const yearProgress = ((currentDate - yearStart) / (yearEnd - yearStart)) * 100;
    
    // Update marker positions
    document.getElementById('date-marker').style.left = `${yearProgress}%`;
    document.getElementById('date-marker-mobile').style.left = `${yearProgress}%`;
    
    // Clear any previous highlights
    document.querySelectorAll('#winter, #spring, #summer, #autumn').forEach(el => {
      el.classList.remove('bg-white/10', 'border', 'border-amber-500/50');
      el.querySelector('h4').classList.remove('text-amber-200');
    });
    
    // Update each season's position and info
    seasons.forEach(season => {
      const seasonId = season.type.toLowerCase();
      const seasonProgress = ((season.date - yearStart) / (yearEnd - yearStart)) * 100;
      
      // Position markers
      document.getElementById(`${seasonId}-marker`).style.left = `${seasonProgress}%`;
      document.getElementById(`${seasonId}-marker-mobile`).style.left = `${seasonProgress}%`;
      
      // Update date text
      const dateElement = document.getElementById(`${seasonId}-date`);
      if (dateElement) {
        const month = season.date.toLocaleString('default', { month: 'short' });
        const day = season.date.getDate();
        const hours = season.date.getHours().toString().padStart(2, '0');
        const minutes = season.date.getMinutes().toString().padStart(2, '0');
        dateElement.textContent = `${day} ${month} ${hours}:${minutes}`;
      }
    });
    
    // Find current and next season
    const { current, next } = getCurrentAndNextSeason(seasons, currentDate);
    
    // Highlight current season
    if (current) {
      const currentEl = document.querySelector(`#${current.type.toLowerCase()}`);
      if (currentEl) {
        // Add highlight to the header
        currentEl.querySelector('h4').classList.add('text-amber-200');
        // Add border and background to the current season box
        currentEl.classList.add('bg-white/10', 'border', 'border-amber-500/50');
      
        // Update mobile view
        document.getElementById('mobile-season').textContent = current.type;
        document.getElementById('mobile-irish').textContent = current.irishName;
        
        const month = current.date.toLocaleString('default', { month: 'short' });
        const day = current.date.getDate();
        document.getElementById('mobile-date').textContent = `${day} ${month}`;
      }
    }
    
    // Set countdown to next season
    if (next) {
      const daysUntil = Math.ceil((next.date - currentDate) / (1000 * 60 * 60 * 24));
      const countdownText = `${daysUntil} days until ${next.type}`;
      
      // Update mobile countdown
      document.getElementById('mobile-countdown').textContent = countdownText;
      
      // Update desktop countdown
      const desktopCountdown = document.getElementById('desktop-countdown');
      if (desktopCountdown) {
        desktopCountdown.textContent = countdownText;
      }
      
      // Set current date display
      const currentDateEl = document.getElementById('current-date');
      if (currentDateEl) {
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        currentDateEl.textContent = currentDate.toLocaleDateString('en-IE', options);
      }
    }
  }
  
  function getCurrentAndNextSeason(seasons, currentDate) {
    // Extended seasons list to handle year boundaries
    const extendedSeasons = [
      ...seasons.map(s => ({ ...s, date: new Date(s.date.getFullYear() - 1, s.date.getMonth(), s.date.getDate()) })),
      ...seasons,
      ...seasons.map(s => ({ ...s, date: new Date(s.date.getFullYear() + 1, s.date.getMonth(), s.date.getDate()) }))
    ].sort((a, b) => a.date - b.date);
    
    // Find current and next season
    let current = null;
    let next = null;
    
    for (let i = 0; i < extendedSeasons.length - 1; i++) {
      if (extendedSeasons[i].date <= currentDate && currentDate < extendedSeasons[i+1].date) {
        current = extendedSeasons[i];
        next = extendedSeasons[i+1];
        break;
      }
    }
    
    return { current, next };
  }
</script>