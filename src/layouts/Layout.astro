  html {
    scroll-behavior: smooth;
    height: 100%;
  }
  
  body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
  }
  
  .font-cinzel {
    font-family: 'Cinzel', serif;
  }
